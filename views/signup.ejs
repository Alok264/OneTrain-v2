<%- include('partials/header') -%>
<section id='blur'>
    <div class="text-center">
        <span class="signup-warning fw-bold text-danger"><%= userWarning %></span>
    </div>
    <section id="login">
        <main class="form-signin">
            <form method="post" action="/signup" class="login-form">
                <div class="row">
                    <div class="col form-floating">
                        <input type="text" class="form-control" id="floatingInputFirstName" placeholder="Name" name="first_name" required>
                        <label for="floatingInputFirstName" class="name-label">First Name</label>
                    </div>
                    <div class="col form-floating">
                        <input type="text" class="form-control" id="floatingInputLastName" placeholder="Kumar" name="last_name" required>
                        <label for="floatingInputLastName" class="name-label">Last Name</label>
                    </div>
                </div>
                <div class="form-floating">
                    <input type="email" class="form-control signup-email" id="user_signup_email" placeholder="name@example.com" name="username" onblur="email_validation('user_signup_email')" required>
                    <label for="user_signup_email">Email address</label>
                </div>
                <span class="email-error-message err"></span>
                <div class="form-floating">
                    <input type="password" class="form-control signup-password password" id="user_first_password" placeholder="Password" name="password" onblur="passwordValidation('user_first_password', 'user_confirm_password')" required>
                    <label for="user_first_password" class="password-label">Password</label>
                </div>
                <span class="error-message err"></span>
                <div class="form-floating">
                    <input type="password" class="form-control signup-password confirm-password" id="user_confirm_password" placeholder="Password" name="confirm-password" oninput="confirmPassword('user_confirm_password', 'user_first_password', 'signup_button')" required autocomplete="off" disabled>
                    <label for="user_confirm_password" class="password-label">Confirm Password</label>
                </div>
                <span class="confirm-error-message err"></span>
                <button class="w-100 btn btn-lg btn-success signup-button" id="signup_button" type="submit" disabled>Sign Up</button>
                <p class="forgot-password">Already a OneTrain user? <a href="/login">Signin/Login here</a></p>
            </form>
            <div class="Choice">
                <div class="row Authentication">
                    <div class="col-sm-6 card-body with">
                        <a class="btn btn-block btn-google" href="/auth/google" role="button">
                            <i class="fab fa-google"></i>
                            Google
                        </a>
                    </div>
                    <div class="col-sm-6 card-body with">
                        <a class="btn btn-block btn-facebook" href="/auth/facebook" role="button">
                            <i class="fab fa-facebook"></i>
                            Facebook
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </section>
</section>
<%- include('partials/footer') -%>